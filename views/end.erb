<% content_for :title do %>
  End of the Game
<% end %>

<legend>🏆 Winner 🏆</legend>
<p><%= session[:game].winner %></p>

<br>

<legend>💯 Scoreboard 💯</legend>

<div class='row justify-content-md-center'>
  <table class="table col-sm-4">
      <tr>
        <th style="width: 50%">Player</th>
        <th style="width: 50%">Score</th>
      </tr>

      <% session[:game].scoreboard.each do |player, score| %>
        <tr>
          <td><%= player %></td>
          <td><%= score %> points</td>
        </tr>
      <% end %>
    </table>
  </div>

<br>

<a class="btn btn-outline-primary" href="/new">
  Start New Game
</a>